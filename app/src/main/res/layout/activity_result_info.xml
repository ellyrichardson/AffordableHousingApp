<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88BDBC"
    tools:context="._activities.ResultInfoActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/resInfoInspScoreTxtView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="16dp"
        android:text="Inspection Score: "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/resInfoActInspScoreTxtView"
        app:layout_constraintEnd_toStartOf="@+id/resInfoHousingStateTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/resInfoHousingStateTextView" />

    <TextView
        android:id="@+id/resInfoActInspScoreTxtView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="16dp"
        android:text="XX"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/resInfoHousingCityTextView"
        app:layout_constraintEnd_toStartOf="@+id/resInfoActHousingStateTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resInfoHousingStateTextView" />

    <TextView
        android:id="@+id/resInfoTitleTxtView"
        android:layout_width="179dp"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="16dp"
        android:text="HOUSING INFO"
        android:textAlignment="center"
        android:textColor="#112D32"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/resInfoHousingStateTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resInfoHousingStateTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Housing State:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/resInfoActHousingStateTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resInfoInspScoreTxtView"
        app:layout_constraintTop_toBottomOf="@+id/resInfoTitleTxtView" />

    <TextView
        android:id="@+id/resInfoActHousingStateTextView"
        android:layout_width="73dp"
        android:layout_height="0dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:text="ST"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/resInfoHousingCityTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resInfoActInspScoreTxtView"
        app:layout_constraintTop_toBottomOf="@+id/resInfoHousingStateTextView" />

    <TextView
        android:id="@+id/resInfoHousingCityTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Housing City:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/resInfoActHousingCityTextView"
        app:layout_constraintEnd_toEndOf="@+id/resInfoActHousingCityTextView"
        app:layout_constraintStart_toStartOf="@+id/resInfoActInspScoreTxtView"
        app:layout_constraintTop_toBottomOf="@+id/resInfoActHousingStateTextView" />

    <TextView
        android:id="@+id/resInfoActHousingCityTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:text="City"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/resInfoActHousingZipTextView"
        app:layout_constraintEnd_toEndOf="@+id/resInfoActHousingStateTextView"
        app:layout_constraintStart_toStartOf="@+id/resultsHeatMapFragment"
        app:layout_constraintTop_toBottomOf="@+id/resInfoHousingCityTextView" />

    <TextView
        android:id="@+id/resInfoHousingZipTextView"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_marginBottom="26dp"
        android:layout_marginTop="27dp"
        android:text="Housing Zip:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/resInfoActHousingZipTextView"
        app:layout_constraintEnd_toEndOf="@+id/resInfoActHousingZipTextView"
        app:layout_constraintStart_toStartOf="@+id/resInfoActHousingCityTextView"
        app:layout_constraintTop_toTopOf="@+id/resInfoActHousingCityTextView" />

    <TextView
        android:id="@+id/resInfoActHousingZipTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="16dp"
        android:text="Zip"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/resInfoHousingDevNameTextView"
        app:layout_constraintEnd_toEndOf="@+id/resInfoHousingDevNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resInfoActHousingCityTextView" />

    <TextView
        android:id="@+id/resInfoHousingDevNameTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:text="Housing Development Name:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/resInfoActHousingDevNameTextView"
        app:layout_constraintEnd_toEndOf="@+id/resInfoActHousingDevNameTextView"
        app:layout_constraintStart_toStartOf="@+id/resInfoActHousingDevNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/resInfoActHousingZipTextView" />

    <TextView
        android:id="@+id/resInfoActHousingDevNameTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:text="Name"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/resultsHeatMapFragment"
        app:layout_constraintEnd_toEndOf="@+id/resInfoTitleTxtView"
        app:layout_constraintStart_toStartOf="@+id/resInfoActHousingCityTextView"
        app:layout_constraintTop_toBottomOf="@+id/resInfoHousingDevNameTextView" />

    <fragment
        android:id="@+id/resultsHeatMapFragment"
        android:name="com.example.kustudents.affordablehousingapp._fragments.HeatMapFragment"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="206dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resInfoActHousingDevNameTextView" />
</android.support.constraint.ConstraintLayout>